.big-img{height: 220px;width: 100%;}
.header-wrapper{padding: 0 12px;border-bottom:5px solid #f6f6f6;}
.title-info{padding: 8px 0;}
.title-info .tools > text{margin-right: 6px;}
.cell-wrapper{line-height: 44px;border-top: 1px solid #f6f6f6;}
.cell-wrapper image{width: 16px;height: 16px;vertical-align: middle;margin: -2px 10px 0 0;}
.cell-title{position: relative;line-height: 42px;padding-left: 16px;border-bottom:1px solid #f6f6f6;}
.cell-title > text::before{content: ""; display: block;width: 2px; height: 20px; background: #118fff; position: absolute; top: 11px; left: 0;}

.cell-title .more{ width: 16px; height: 16px;position: absolute; top: 13px; right: 5px;}
.content-desc{padding: 20px 24px;}
.more-wrapper{text-align: center;display: flex;flex-direction:column;margin-bottom: 60px;}
.more-wrapper image{width: 18px; height: 12px;margin: 10px auto;}


.footer-wrapper{position: fixed; bottom: 0;left: 0;width: 100%; height: 50px;display: flex}

.lef-wrapper{width: 180px; height: 49px; border: 1px solid #f6f6f6;text-align: center;display: flex;color: #707070;}
.lef-wrapper > view{display: flex;flex-direction:column;flex: 1;position: relative}
.lef-wrapper > view:nth-child(n+1){border-left: 1px solid #f6f6f6;}
.lef-wrapper image{width: 18px; height: 18px;margin: 8px auto 3px;}
.enroll-btn{flex: 1; text-align: center;line-height: 50px;}
.lef-wrapper > view .share-button{opacity:0;position:absolute;width:100%;height:100%;margin:0;padding:0;top:0;left:0;}