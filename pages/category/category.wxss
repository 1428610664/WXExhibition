.search-wrapper{display:flex;flex-direction:row;padding:6px 10px;width: calc( 100% - 20px );position: fixed;top: 0; left: 0;z-index: 99;}
.address-view{margin-right: 5px;line-height: 32px;}
.address-view .address-img{width:30rpx;height:30rpx;vertical-align:middle;}
.address-view .address{font-size:12px;}
.search-wrapper .code{width:36rpx;height:36rpx;vertical-align:middle;margin: 7px 0 0 10px}
.search-wrapper .search-img{width:34rpx;height:34rpx;vertical-align:middle;margin: -2px 5px 0 0;}
.search-wrapper .search-view{background:#f6f6f6;flex:1;font-size:12px;text-align:center;height: 34px;line-height: 34px;border-radius:3px;color:#bfbfbf;}

.top-tab{position: fixed;top: 46px; left: 0;z-index: 99;height:36px;width:750rpx;color:#333;font-size:14px;background-color: rgba(255,255,255,.95);display:flex;flex-flow:row nowrap;justify-content:space-around;align-items:stretch;}
.top-tab .top-tab-item{flex-grow:1;height:36px;line-height:36px;text-align:center;border-bottom:1px solid #f6f6f6;}
.top-tab-item.active{border-bottom:1px solid #118fff;color: #118fff;}

.scrollView{position: relative;height: 100%;margin-top: 40px;}

.tab-wrapper{display: flex;position: fixed;top: 83px;left: 0;z-index: 99;width: 100%; height: 40px;line-height: 40px;border-bottom: 1px solid #f6f6f6;background-color: rgba(255,255,255,.95);}
.tab-item{flex: 1;text-align: center;font-size: 13px;}
.tab-item image{width: 12px;height: 12px;vertical-align: middle;margin: -3px 0 0 3px;}

.select-wrapper{position: fixed;top: 123px; left: 0; z-index: 100;width: 100%;max-height: 320px;overflow-y: auto;background-color: rgba(255,255,255,.95);}
.select-wrapper .select-item{line-height: 36px;text-indent: 12px;font-size: 13px;border-top: 1px solid #f6f6f6}
.select-mask{position: fixed; top: 123px; left: 0;bottom: 0; z-index: 98; background: rgba(0,0,0,.3);width: 100%;}