.bind-wrapper {
    position: relative;
    width: 440rpx;
    padding: 60rpx;
    border-radius: 3px;
}

.wrong{
    width: 12px;
    height: 12px;
    padding: 5px;
    position: absolute;
    top: 10rpx;
    right: 10rpx;
}

.btn-wrapper {
    height: 74rpx;
    line-height: 74rpx;
    border-radius: 3px;
    position: relative;
    margin-top: 20rpx;
}

.btn-wrapper2 {
    border: 2rpx solid #f1f1f1;
    height: 70rpx;
    line-height: 70rpx;
}

.btn-wrapper image {
    width: 18px;
    height: 18px;
    vertical-align: middle;
    margin: -3px 16rpx 0 0;
}

.btn-wrapper button {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    border: none;
}

.check-wrapper {
    margin-top: 20rpx;
}

.check-wrapper checkbox {
    width: 12px;
    height: 12px;
}

.check-wrapper image {
    width: 16px;
    height: 16px;
    vertical-align: middle;
    margin: -3px 2px 0 0;
}


.title{
    margin-bottom: 46rpx;
}
.inp-wrapper{
    border-top: 1px solid #f1f1f1;
    height: 90rpx;
    line-height: 90rpx;
}

.inp-wrapper input{height: 100%; font-size: 14px;}
.submit-btn{ height: 80rpx;line-height: 80rpx;width: 100%;border-radius: 3px;margin-top: 40rpx;font-size: 15px;}