.search-wrapper{position: fixed;top: 0;left: 0;z-index: 99;display:flex;flex-direction:row;padding:6px 10px;width: calc( 100% - 20px );}
.address-view{margin-right: 5px;line-height: 32px;}
.address-view .address-img{width:30rpx;height:30rpx;vertical-align:middle;}
.address-view .address{font-size:12px;}
.search-wrapper .code{width:36rpx;height:36rpx;vertical-align:middle;margin: 7px 0 0 10px}
.search-wrapper .search-img{width:34rpx;height:34rpx;vertical-align:middle;margin: -2px 5px 0 0;}
.search-wrapper .search-view{background:#f6f6f6;flex:1;font-size:12px;text-align:center;height: 34px;line-height: 34px;border-radius:3px;color:#bfbfbf;}

.nav-wrapper{position: fixed;top: 46px;left: 0;z-index: 99;width: calc( 100% - 20rpx );display:flex;flex-direction:row;padding-left:20rpx;background: rgba(255, 255, 255, .95)}
.nav{flex: 1;width: calc( 100% - 50px );height: 40px;white-space:nowrap;}
.nav .nav-item{display: inline-block;height: 39px;line-height: 39px;border-bottom: 1px solid #fff;color: #333;padding: 0 4rpx;}
.nav .nav-item:nth-child(n+2){margin-left: 58rpx;}
.nav .nav-item.on{border-bottom: 1px solid #118fff;}
.nav-wrapper .add-img{width: 16px; height: 16px;padding: 12px 10px;}

.index-header{text-align:center;font-weight:normal;font-size:30rpx;line-height:40rpx;color:#757575;}
swiper.index-swiper{position:relative;height:280rpx;}
swiper .swiper-mask{position:absolute;top:0;left:0;bottom:0;width:100%;}
swiper image{display:block;width:100%;height:100%;}
swiper .swiper-desc{position:absolute;bottom:0;left:0;right:0;width:100%;background:linear-gradient(to bottom,rgba(0,0,0,0)0%,rgba(63,76,88,0.3)100%);color:#fff;line-height:150rpx;margin:0 auto;font-weight:700;overflow:hidden;white-space:nowrap;text-overflow:ellipsis;font-size:30rpx;text-shadow:0px 0px 16px #646d75;}