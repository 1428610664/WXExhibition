@import "/wxParse/wxParse.wxss";

.big-img{height: 220px;width: 100%;}
.head-tab{padding-top: 32rpx;}
.header-wrapper{margin-bottoom: 92rpx;padding: 0 12px;border-bottom:5px solid #f6f6f6;}
.title-info{padding: 8px 0;border-top: 1px solid #f6f6f6;margin-top: 36rpx;}
.title-info .tools{margin-top: 8px;}
.title-info .tools > text{margin-right: 6px;}
.cell-wrapper{padding: 24rpx 0;border-top: 1px solid #f6f6f6;display: flex;}
.cell-wrapper .icon-wrapper{align-items:center;justify-content:center;display:flex;}
.cell-wrapper image{width: 16px;height: 16px;vertical-align: middle;margin: -2px 10px 0 0;}
.cell-wrapper text{flex: 1;}

.footer{position: fixed;bottom: 0;left: 0;width: 100%; height: 92rpx;text-align: center;line-height: 92rpx;z-index: 99}
.footer > view{position: relative;}
.footer > view:nth-child(n+2):before{content: "";display: block;width: 1px; height: 36rpx; position: absolute;top: 28rpx;left: 0;background: #fff;}